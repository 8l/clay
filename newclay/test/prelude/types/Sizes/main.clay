import show.*;

showSize(#'T) {
    show('T);
    show(#TypeSize('T));
}

main() {
    showSize(Bool);
    showSize(Int8);
    showSize(Int16);
    showSize(Int32);
    showSize(Int64);
    showSize(Float32);
    showSize(Float64);
    showSize(Char);
    showSize(Char16);
    showSize(Char32);
    showSize(OpaquePointer);
    showSize(Tuple[Int8]);
    showSize(Tuple[Int8, Int8, Int8]);
    showSize(Tuple[Int8, Int16]);
    showSize(Tuple[Int8, Int32]);
    showSize(Tuple[Int32, Int8]);
    showSize(Tuple[Int32, Int8, Int64]);
    showSize(Union[Int8]);
    showSize(Union[Int8, Int16]);
    showSize(Union[Tuple[Int8, Int8, Int8], Int16]);
    showSize(Array[Int32, 16]);
    showSize(Array[Tuple[Int8, Int8, Int8], 16]);
}
