import variants.*;
import variants.representation.*;
import show.*;

symbol Nothing = RecordType();

symbol MaybePointer['T] =
    VariantType(Nothing, Pointer['T]),
    WithReprType(NullablePointerRepr);

foo(_:Nothing) {
    show("nothing");
}

overload foo(p:Pointer[Int]) {
    show(p^);
    p^ += 1;
}

main() {
    show(#(TypeSize(MaybePointer[Int]) == TypeSize(Pointer[Int]))); ////true

    var i = 5;
    var m = MaybePointer[Int](&i);
    var n = MaybePointer[Int](Nothing());

    dispatch(m, foo); ////5
    dispatch(m, foo); ////6
    dispatch(n, foo); ////nothing
    dispatch(n, foo); ////nothing

    show(i); ////7

    show("--"); ////--
    show(variantIs?(Nothing,      m)); ////false
    show(variantIs?(Pointer[Int], m)); ////true
    show(variantAs (Pointer[Int], m)^); ////7

    show("--"); ////--
    show(variantIs?(Nothing,      n)); ////true
    show(variantIs?(Pointer[Int], n)); ////false
    show(OpaquePointer(&variantAs(Nothing, n)) == OpaquePointer(&n)); ////true
}
