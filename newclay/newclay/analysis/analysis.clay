record SpecializationContext (
    body: Pointer[Vector[SpecializedNode]],
    complete?: Pointer[Bool],
);

subContext(s:SpecializationContext, subBody:Vector[SpecializedNode])
    = SpecializationContext(&subBody, s.complete?);


//
// analyzeMain
//

analyzeMain() {
    var mainValue = envEntryToValue(publicLookup(getProgramMainModule(), "main"));
    if (not runtimeCallable?(mainValue))
        genericError("main is not a procedure");
    return analyzeCallable(mainValue, VariableList());
}


