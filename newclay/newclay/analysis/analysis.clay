singleVariable(s:VariableList) {
    if (size(s) != 1)
        genericError("multiple values cannot be used in single value context");
    return s[0];
}

cloneVariable(v:RTVariable, ...name) = RTVariable(v.kind, v.type, v.value?, ...name);
cloneVariables(vs:VariableList, ...name) = map(v ref=> cloneVariable(v, ...name), vs);
