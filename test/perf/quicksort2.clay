import kernel.*;
import libc.*;

quickSort(a) {
    sortRange(a, 0, size(a));
}

sortRange(a, start, end) {
    if (start < end-1) {
        var m = start;
        for (i in range(start+1, end)) {
            if (a[i] < a[start]) {
                m += 1;
                swap(a[i], a[m]);
            }
        }
        swap(a[start], a[m]);
        sortRange(a, start, m);
        sortRange(a, m+1, end);
    }
}

reverse(a) {
    var n = size(a);
    for (i in range(n / 2))
        swap(a[i], a[n-i-1]);
}

main() {
    var a = Array[Int32, 1000]();
    for (i in range(size(a)))
        a[i] = i*2;
    for (i in range(10000)) {
        quickSort(a);
        reverse(a);
    }
    printf(cstring("a[0] = %d\n"), a[0]);
    return 0;
}
