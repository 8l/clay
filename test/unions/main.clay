
main() {
    alias T = Union[Double, UInt64, Array[UInt8,8]];
    println("sizeof union = ", TypeSize(T));

    var x = T();
    x.0 = 1.0;

    println("as Double = ", x.0);
    println("as UInt64 = ", x.1);

    print("as Array[UInt8,8] = ");
    for (y in x.2)
        print(y, " ");
    println();
}
