import types.*;
import strings.*;
import libc;

overloadable assert;

inlined overload assert(cond:Bool) {
    if (not cond) {
        libc.fprintf(libc.stderr, cstring("assertion failed\n"));
        libc.abort();
    }
}

inlined overload assert(cond:Bool, message:String) {
    if (not cond) {
        libc.fprintf(libc.stderr,
                     cstring("assertion failed: %s\n"),
                     cstring(message));
        libc.abort();
    }
}
