
import simd.primitives as prims;


//
// index
//

[T,n,I | Integer?(I)]
inline overload index(a:Vec[T,n], i:I) = ref prims.vecElementRef(a, Int(i));



//
// type inferring constructor
//

[...A | (countValues(...A) > 0) and equalValues?(...A)]
inline overload Vec(...args:A) {
    alias n = static countValues(...A);
    alias T = firstValue(...A);
    return forward Vec[T, n](...args);
}



//
// basic constructor
//

[T,n,...A | (countValues(...A) == n) and equalValues?(T, ...A)]
inline overload Vec[T,n](...args:A) {
    var a = Vec[T,n]();
    var i = 0;
    static for (x in ...args) {
        a[i] = x;
        i += 1;
    }
    return forward a;
}



//
// single element replicating constructor
//

[T,n]
inline overload Vec[T,n](x:T) {
    var a = Vec[T,n]();
    for (i in range(n))
        a[i] = x;
    return forward a;
}



//
// other constructors, moveUnsafe, resetUnsafe, assign, destroy
//

[T,n]
inline overload Vec[T,n]() returned:Vec[T,n] {
}

[T,n]
overload Vec[T,n](src:Vec[T,n]) returned:Vec[T,n] __llvm__{
    %1 = load ${Vec[T,n]} * %src
    store ${Vec[T,n]} %1, ${Vec[T,n]} * %returned
    ret i32 0
}

[T,n]
inline overload moveUnsafe(src:Vec[T,n]) returned:Vec[T,n] {
    returned <-- src;
}

[T,n]
inline overload assign(dest:Vec[T,n], src:Vec[T,n]) {
    dest <-- src;
}



//
// unpackVec
//

[T,n]
inline unpackVec(a:Vec[T,n]) = ...unpackElements(a, static 0);

private procedure unpackElements;

[T,n,i]
inline overload unpackElements(a:Vec[T,n], static i) =
    a[i], ...unpackElements(a, static i+1);

[T,n,i | i == n]
inline overload unpackElements(a:Vec[T,n], static i) = ;



//
// numeric ops
//

[T,n]
inline overload add( a:Vec[T,n], lvalue b:Vec[T,n]) = forward prims.add(a, b);

[T,n,X | Numeric?(X)]
inline overload add(a:Vec[T,n], x:X) = forward a + Vec[T,n](T(x));

[T,n,X | Numeric?(X)]
inline overload add(x:X, a:Vec[T,n]) = forward Vec[T,n](T(x)) + a;


[T,n]
inline overload subtract(a:Vec[T,n], b:Vec[T,n]) = forward prims.subtract(a, b);

[T,n,X | Numeric?(X)]
inline overload subtract(rvalue a:Vec[T,n], x:X) = forward a - Vec[T,n](T(x));

[T,n,X | Numeric?(X)]
inline overload subtract(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) - a;


[T,n]
inline overload multiply(a:Vec[T,n], b:Vec[T,n]) = prims.multiply(a, b);

[T,n,X | Numeric?(X)]
inline overload multiply(a:Vec[T,n], x:X) = a * Vec[T,n](T(x));

[T,n,X | Numeric?(X)]
inline overload multiply(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) * a;


[T,n]
inline overload divide(a:Vec[T,n], b:Vec[T,n]) = prims.divide(a, b);

[T,n,X | Numeric?(X)]
inline overload divide(a:Vec[T,n], x:X) = a / Vec[T,n](T(x));

[T,n,X | Numeric?(X)]
inline overload divide(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) / a;


[T,n]
inline overload remainder(a:Vec[T,n], b:Vec[T,n]) = prims.remainder(a, b);

[T,n,X | Numeric?(X)]
inline overload remainder(a:Vec[T,n], x:X) = a % Vec[T,n](T(x));

[T,n,X | Numeric?(X)]
inline overload remainder(x:X, a:Vec[T,n]) = Vec[T,n](T(x)) % a;



//
// bitwise ops
//

[T,n]
inline overload shiftLeft(a:Vec[T,n], b:Vec[T,n]) = forward prims.shiftLeft(a, b);

[T,n,X | Numeric?(X)]
inline overload shiftLeft(a:Vec[T,n], x:X) = forward shiftLeft(a, Vec[T,n](T(x)));

[T,n,X | Numeric?(X)]
inline overload shiftLeft(x:X, a:Vec[T,n]) = forward shiftLeft(Vec[T,n](T(x)),  a);


[T,n]
inline overload shiftRight(a:Vec[T,n], b:Vec[T,n]) = forward prims.shiftRight(a, b);

[T,n,X | Numeric?(X)]
inline overload shiftRight(a:Vec[T,n], x:X) = forward shiftRight(a, Vec[T,n](T(x)));

[T,n,X | Numeric?(X)]
inline overload shiftRight(x:X, a:Vec[T,n]) = forward shiftRight(Vec[T,n](T(x)),  a);

private inline bitwiseOp(fn, a, b) {
    alias size = Int(TypeSize(Type(a)));
    return bitwiseCast(
        fn(bitwiseCast(a, Vec[UInt8, size]), bitwiseCast(b, Vec[UInt8, size])),
        Type(a)
    );
}

[T,n, U,m | CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
inline overload bitwiseAnd(a:Vec[T,n], b:Vec[U,m]) = forward bitwiseOp(prims.bitwiseAnd, a, b);

[T,n,X | Numeric?(X)]
inline overload bitwiseAnd(a:Vec[T,n], x:X) = forward bitwiseAnd(a, Vec[T,n](T(x)));

[T,n,X | Numeric?(X)]
inline overload bitwiseAnd(x:X, a:Vec[T,n]) = forward bitwiseAnd(Vec[T,n](T(x)),  a);


[T,n, U,m | CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
inline overload bitwiseOr(a:Vec[T,n], b:Vec[U,m]) = forward bitwiseOp(prims.bitwiseOr, a, b);

[T,n,X | Numeric?(X)]
inline overload bitwiseOr(a:Vec[T,n], x:X) = forward bitwiseOr(a, Vec[T,n](T(x)));

[T,n,X | Numeric?(X)]
inline overload bitwiseOr(x:X, a:Vec[T,n]) = forward bitwiseOr(Vec[T,n](T(x)),  a);


[T,n, U,m | CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
inline overload bitwiseXor(a:Vec[T,n], b:Vec[U,m]) = forward bitwiseOp(prims.bitwiseXor, a, b);

[T,n,X | Numeric?(X)]
inline overload bitwiseXor(a:Vec[T,n], x:X) = forward bitwiseXor(a, Vec[T,n](T(x)));

[T,n,X | Numeric?(X)]
inline overload bitwiseXor(x:X, a:Vec[T,n]) = forward bitwiseXor(Vec[T,n](T(x)),  a);



//
// unary ops
//

[T,n]
inline overload plus(a:Vec[T,n]) = forward a;

[T,n]
inline overload minus(a:Vec[T,n]) = forward Vec[T,n](T(0)) - a;

[T,n]
inline overload bitwiseNot(lvalue a:Vec[T,n]) = forward bitwiseXor(Vec[T,n](componentMask(T)), a);



//
// printing
//

[T,n]
inline overload printTo(stream, lvalue a:Vec[T,n])
    { printTo(stream, Type(a), "(", ...weaveValues(", ", ...unpackVec(a)), ")"); }



//
// casting
//

CompatibleVectorTypes?(X, Y) = false;
[T,n, U,m | TypeSize(Vec[T,n]) == TypeSize(Vec[U,m])]
overload CompatibleVectorTypes?(static Vec[T,n], static Vec[U,m]) = true;

[T,n, U,m | T != U and CompatibleVectorTypes?(Vec[T,n], Vec[U,m])]
inline overload Vec[T,n](v: Vec[U,m]) = bitwiseCast(v, Vec[T,n]);



//
// boolean masks
//

[T | Integer?(T)]
inline componentMask(static T) = T(-1);
inline overload componentMask(static Float32) = bitwiseCast(-1_i32, Float32);
inline overload componentMask(static Float64) = bitwiseCast(-1_i64, Float64);
inline overload componentMask(static Float80) = bitwiseCast(-1_i128, Float80);
