import libc;

error(...e) {
    printlnTo(stderr, "error: ", ...e);
    libc.exit(-1);
}

errorNoThrow(...e) {
    printlnTo(stderr, "error: ", ...e);
}

inlined assert(cond:Bool) {
    if (not cond)
        error("assertion failed");
}

inlined overload assert(cond:Bool, message:String) {
    if (not cond)
        error("assertion failed: ", message);
}
