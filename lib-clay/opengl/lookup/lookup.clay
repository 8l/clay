import opengl.platform.*;

private _findGLFunction(...names) {
    static for (name in ...names) {
        var ptr = lookupGLFunction(name);
        if (not null?(ptr))
            return ptr;
    }
    return GLCodePointer[(), ()](0);
}

findGLFunction(Args, Return, ...names) {
    return GLCodePointer[Args, Return](_findGLFunction(...names));
}

