
import metaclay.common.*;
import metaclay.lexer.*;
import metaclay.parser.*;

main(args) {
    if (size(args) != 2) {
        println("usage: ", args[0], " <file>");
        return -1;
    }
    try {
        var file = readSource(args[1]);
        var ast = parse(tokenize(file));
        println(ast.topLevelItems);
    }
    catch (e:ClayError) {
        displayError(e);
    }
    return 0;
}
