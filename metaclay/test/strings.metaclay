

//
// mapValues
//

symbol mapValues = ();
overload mapValues('f, 'first, ...'rest) = 'f('first), ...mapValues('f, ...'rest);
overload mapValues('f) = ;



//
// stringChar, reverseString
//

symbol stringChar = ();
overload stringChar('s, 'i) = stringSlice('s, 'i, add('i, 1));

symbol reverseString = ();
overload reverseString('s) =
    stringConcat(...mapValues(
        i => stringChar('s, subtract(stringSize('s), add(i,1))),
        ...integers(stringSize('s)),
    ));



//
// main
//

symbol main = ();
overload main() = reverseString("foobar");
