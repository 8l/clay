
import metaclay.common.*;
import metaclay.loader.*;
import metaclay.evaluator.*;

main(args) {
    if (size(args) != 2) {
        println("usage: ", args[0], " <file>");
        return -1;
    }
    try {
        var module = loadProgram(args[1]);
        var result = evaluateMain(module);
        println("result = ", result);
    }
    catch (e:ClayError) {
        displayError(e);
    }
    return 0;
}
